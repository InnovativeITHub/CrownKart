<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/splash_logo"/>

        <LinearLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_logo"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="28dp">

            <com.innovative.crownkart.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:font="@string/bold_glegoo"
                android:text="@string/app_crown_title"
                android:textSize="32sp"
                android:textColor="#FF0" />

            <com.innovative.crownkart.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:font="@string/bold_glegoo"
                android:text="@string/app_kart_title"
                android:textSize="36sp"
                android:textColor="#000"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_container">

            <com.innovative.crownkart.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:font="@string/semibold_sans"
                android:text="Sign in"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_marginLeft="16dp"/>

            <com.innovative.crownkart.views.CustomTextView
                android:id="@+id/tv_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:font="@string/regular_sans"
                android:padding="8dp"
                android:text="Forgot Password?"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:layout_marginRight="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_forgot_password"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginTop="8dp">

                <com.innovative.crownkart.views.CustomEditText
                    android:id="@+id/et_email_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rectangle_background"
                    android:padding="10dp"
                    android:hint="Email address"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    android:maxLines="1" />

                <com.innovative.crownkart.views.CustomEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rectangle_background"
                    android:layout_marginTop="8dp"
                    android:padding="10dp"
                    android:hint="Password"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    android:maxLines="1" />

                <CheckBox
                    android:id="@+id/cb_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="10dp"
                    android:text="Show password"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:maxLines="1" />

                <com.innovative.crownkart.views.CustomButton
                    android:id="@+id/btn_signin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_rectangle_background"
                    android:layout_marginTop="8dp"
                    android:text="Sign in"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:imeOptions="actionDone" />

                <com.innovative.crownkart.views.CustomButton
                    android:id="@+id/btn_skip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_rectangle_background"
                    android:layout_marginTop="8dp"
                    android:text="Skip"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:imeOptions="actionDone" />

                <com.innovative.crownkart.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:font="@string/regular_sans"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:hint="-------- New to CrownKart? --------"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <com.innovative.crownkart.views.CustomButton
                    android:id="@+id/btn_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rectangle_background"
                    android:layout_marginTop="8dp"
                    android:text="Create a new CrownKart account"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:imeOptions="actionDone"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>

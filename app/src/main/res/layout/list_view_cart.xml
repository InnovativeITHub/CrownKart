<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="4dp"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/button_rectangle_background" />

        <com.innovative.crownkart.views.CustomTextView
            android:id="@+id/tv_cat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/iv_product_image"
            android:layout_toRightOf="@+id/iv_product_image"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text="abcd"
            android:textColor="@color/blue"
            android:textSize="16sp"
            app:font="@string/semibold_sans" />

        <com.innovative.crownkart.views.CustomTextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:drawableEnd="@mipmap/rupee"
            android:drawableRight="@mipmap/rupee"
            android:gravity="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="dddd"
            android:textColor="@color/green_light"
            android:textSize="16sp"
            app:font="@string/semibold_sans" />

        <com.innovative.crownkart.views.CustomTextView
            android:id="@+id/tv_product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cat_name"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/iv_product_image"
            android:layout_toRightOf="@+id/iv_product_image"
            android:gravity="center"
            android:text="sssssss"
            android:textColor="@color/blue"
            android:textSize="14sp"
            app:font="@string/regular_sans" />

        <com.innovative.crownkart.views.CustomTextView
            android:id="@+id/tv_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_description"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/iv_product_image"
            android:layout_toRightOf="@+id/iv_product_image"
            android:gravity="center"
            android:text="ppppp"
            android:textColor="@color/blue"
            android:textSize="14sp"
            app:font="@string/regular_sans" />

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/rb_product_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_color"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/iv_product_image"
            android:layout_toRightOf="@+id/iv_product_image"
            android:rating="5"
            android:visibility="visible" />


    </RelativeLayout>
</android.support.v7.widget.CardView>